{
    "name": "hochstrasserio/wirecard",
    "description": "A modern client for the Wirecard payment gateway",
    "keywords": [
        "hochstrasserio",
        "wirecard"
    ],
    "homepage": "https://github.com/hochstrasserio/wirecard",
    "license": "MIT",
    "authors": [
        {
            "name": "Christoph Hochstrasser",
            "email": "christoph@hochstrasser.io",
            "homepage": "https://www.hochstrasser.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.4.0",
        "guzzlehttp/psr7": "^1.0.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*"
    },
    "autoload": {
        "psr-4": {
            "Hochstrasser\\Wirecard\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hochstrasser\\Wirecard\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
